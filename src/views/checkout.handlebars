<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/style.css">
  <title>Val di sole</title>
</head>
<body>
  <br>
  <div class="container">
    <div class="d-flex flex-direction-row justify-content-evenly align-items-center">
      <h1>Resumen de Compra</h1>
      <a href="/api/carts/view-cart" class="btn btn-primary">volver atrás</a>
    </div>
    <br>
    <br>
    {{#each productsWithQuantity}}
      <div class="card mb-3" style="">
        <div class="row g-0">
          <div class="col-md-2">
            <img src="{{product.thumbnail}}" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h6 class="card-title">Producto: {{product.title}}</h6>
              <p class="card-text">Precio por unidad: u$d{{product.price}}</p>
              <p class="card-text">Cantidad: {{quantity}}</p>
              <p class="card-text">Total por Producto: u$d{{total}}</p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    <div class="d-flex flex-direction-row justify-content-around align-items-center">
      <h3>Total: u$d {{cartTotal}}</h3>
      <a href="/api/products" class="btn btn-primary">Volver a Productos</a>
      <div>
        <form method="POST" action="/api/carts/{{cartId}}/purchase">
          <button type="submit" class="btn btn-primary">Finalizar compra</button>
        </form>
      </div>
    </div>
    <br />
    <!-- Botón "Finalizar compra" -->
  </div>
<body>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="/js/checkout.js"></script>