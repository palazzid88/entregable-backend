<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../public/style.css">
  <title>Val di sole</title>
</head>
<body>
<br>
<br>
<br>
  <div class="d-flex flex-direction-row justify-content-around align-items-center">
    <h1> Carrito de Compras </h1>
    <a href="/api/products" class="btn btn-primary"> << Volver a Productos</a>
  </div>

  {{!-- <div class="div-cart-handle">
    <div>
      <h1>Carrito de Compras</h1>
      <p>cartId: {{ cart }}</p>
    </div>
  </div> --}}
  
  {{ log 1 }}
  {{ log prodToCart }}
  {{ log 2 }}

  {{#if message}}
    <p>{{message}}</p>
  {{else}}
    {{#each prodToCart}}
      <div class="card mb-3" style="">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="{{product.thumbnail}}" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h6 class="card-title">Producto: {{product.title}}</h6>
              <p class="card-text">Precio por Unidad: u$d {{product.price}}</p>
              <p class="card-text">Cantidad: {{quantity}}</p>
              
              <div class="input-sm mb-3">
                <div class="col-3">
                  <input type="number" id="quantityInput" class="form-control" value="{{quantity}}" min="1">
                </div>
              </div>
              <button class="btn btn-primary" onclick="updateQuantity('{{product._id}}')">Actualizar Cantidad</button>
              <button class="btn btn-danger" onclick="deleteProduct('{{product._id}}')">Eliminar</button>

              <!-- Mostrar el total por producto -->
              <p class="card-text">Total por Producto: u$d{{total}}</p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
    <h3>Total del Carrito: u$d {{cartTotal}}</h3>
    <br>
    <button class="btn btn-danger" onclick="deleteProductsInCart()">Eliminarr</button>

    <div class="d-flex flex-direction-row align-items-center justify-content-around">
      {{!-- <form method="DELETE" action="/api/carts/{{cartId}}">
        <button type="submit" class="btn btn-danger"> X Vaciar Carro</button>
      </form> --}}
      <a href="/api/carts/checkout/{{cart}}" class="btn btn-primary">Continuar con la Compra >></a>
    </div>
    <br>
    <br>
    <br>
    <br>
  {{/if}}
</body>
</html>
