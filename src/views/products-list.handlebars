{{!-- RENDER PRODUCTS CON HTTP --}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <title>Val Di Sole Bikes</title>
</head>
<body>
  <section class="section-home">
  <div class="div-products-handle flex-wrap">
    <br>
    <div>
      <a href="/api/products">
      <img width="280" src="https://i.imgur.com/JR6hdEs.png" href="/api/products" alt="Logo Val di Sole">
      </a>
    </div>
    <div class="d-flex">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Menú</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/api/carts/view-cart">
            <img class="img-products-handle" src="https://cdn.pixabay.com/photo/2013/07/12/14/53/cart-148964_1280.png" alt="Cart Icon">
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Inicio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Nosotros</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contacto</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/perfil">Perfil</a>
        </li>
      </ul>
    </div>
  </nav>
</div>

<!-- Agregar un carrusel Bootstrap -->
  <div id="imageCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#imageCarousel" data-slide-to="1"></li>
      <li data-target="#imageCarousel" data-slide-to="2"></li>
      <!-- Agrega más elementos <li> según la cantidad de imágenes -->
    </ol>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://i.imgur.com/VQw1Y25.png" class="d-block w-100" alt="Imagen 1">
      </div>
      <div class="carousel-item">
        <img src="https://i.imgur.com/kbqPuRU.png" class="d-block w-100" alt="Imagen 2">
      </div>
      <div class="carousel-item">
        <img src="https://i.imgur.com/6Z9mKOz.png" class="d-block w-100" alt="Imagen 3">
      </div>
      <!-- Agrega más elementos <div> con imágenes según la cantidad de imágenes -->
    </div>

    <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Siguiente</span>
    </a>
  </div>
  <br>
<div class="d-flex align-items-center justify-center mt-2 mb-2">
  <h2>Productos</h2>
</div>
<br>
<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each products}}
  <div class="col">
    <div class="card h-100">
      <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">${{this.price}}</p>
        <p class="card-text">{{this.category}}</p>
        <a href="/api/products/{{this.id}}" class="btn btn-primary">Ver Más</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>


  <div>
    <p>Página Actual {{pagination.page}}</p>
  </div>
  {{#if pagination.hasPrevPage}}
    <a href="/api/products?page={{pagination.prevPage}}">◀️{{pagination.prevPage}}</a>
  {{/if}}
  {{#if pagination.hasNextPage}}
  <a href="/api/products?page={{pagination.nextPage}}">▶️{{pagination.nextPage}}</a>
  {{/if}}
</section>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-MJvJF5z30XnJYOm4WmWLt6LCvR6VIf8UAR7FAQQrF1jCbm3/khM7Vi86J1+jUdz6" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
