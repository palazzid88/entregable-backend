{{!-- RENDER PRODUCTS DESDE EL BACKEND --}}

<div>
  <h1>Trek Bontrager</h1>
</div>
{{#each products}}
<div class="card mb-3" style="">
  <div class="row g-0">
    <div class="col-md-4">
      <img src={{this.thumbnail}} class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.price}}</p>
        <p class="card-text">{{this.category}}</p>
        <a href="#" class="btn btn-primary">delete</a>        
      </div>
    </div>
  </div>
</div>
{{/each}}

{{!-- FORMULARIO PARA CARGA DE NUEVO PRODUCTO DESDE EL FRONTEND --}}

<div>
  <form action="/realTimeProducts" method="post">
    <div>
      <label for="product-name">Nombre del producto:</label>
      <input type="text" id="product-name" name="productName" required>
    </div>
    <div>
      <label for="product-description">Descripción:</label>
      <textarea id="product-description" name="productDescription" required></textarea>
    </div>
    <div>
      <label for="product-price">Precio:</label>
      <input type="number" id="product-price" name="productPrice" required>
    </div>
    <div>
      <label for="product-image">Dirección de la imagen:</label>
      <input type="text" id="product-image" name="productImage" required>
    </div>
    <div>
      <label for="product-code">código</label>
      <input type="number" id="product-code" name="productCode" required>
    </div>
    <div>
      <label for="product-stock">stock</label>
      <input type="number" id="product-stock" name="productStock" required>
    </div>
    <div>
      <div>
      <label for="product-status">status</label>
      <input type="text" id="product-status" name="productStatus" required>
    </div>
    <div>
      <label for="product-category">category</label>
      <input type="text" id="product-category" name="productCategory" required>
    </div>
    <button type="submit" id="submit-btn">Enviar</button>
  </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
